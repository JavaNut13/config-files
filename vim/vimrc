" Line numbers and relative numbers
set relativenumber
set number

" Leader as space key
let mapleader=" "

" Allow backspace in more locations
set backspace=indent,eol,start

" Disable line wrap
set nowrap

" Change syntax based on file types
filetype plugin indent on
syntax on
colorscheme deep-space

" 2 space indent is life
set tabstop=2
set shiftwidth=2
set expandtab
" Enable ctrl-p
set runtimepath^=~/.vim/bundle/ctrlp.vim
noremap <leader>f :CtrlP<CR>

" I sometimes use GVim
set guioptions-=RrlL

" Allow for buffers in the background
set hidden

" Disable arrow keys
nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>

" jj as escape in insert more
imap jj <Esc>

" C-n, C-m to switch tabs
nnoremap <C-n> :bn<CR>
nnoremap <C-m> :bp<CR>

" Open new splits in the 'other' location
set splitbelow
set splitright

" Highlight line for keeping under 80 chars
set colorcolumn=81

" Some other stuff
set visualbell

" Show a menu for command completions
set wildmenu

" Don't redraw as much
set lazyredraw

" Show eol
set list
set listchars=eol:Â¬

" Load config for this device
let __filepath = expand("~/.vimrc-local")
if filereadable(__filepath)
  execute 'source '.fnameescape(__filepath)
endif

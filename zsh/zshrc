#!/bin/zsh

source ~/.zsh/alias.sh
source ~/.zsh/env.sh

# Prompt
autoload -U colors
colors
setopt prompt_subst
source ~/.zsh/hostname_color.sh
PROMPT='%(?.%F{$hostname_color}^_^%f.%F{red}x_x%f) (%1/) '

# Visual suggestions
source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# gcd command

source ~/.zsh/gcd.sh
